<h3>Ingrese producto</h3>
<form action="/productos" method="POST">
    <input type="text" name="nombre" placeholder="nombre">
    <input type="number" name="precio" placeholder="precio">
    <input type="text" name="thumbnail" placeholder="url imagen">
    <input type="submit" value="submit">
</form>
<!-- <a href="http://localhost:8080/productos">
    <input type="submit" value="Vista de productos" />
</a> -->
<div class="row mt-1 mx-1" style="width: 640px; height: 100px; overflow: auto; background-color: lightgrey;">
    <% productosArray.forEach(producto=> { %>
        <div class="row">
            <div class="col">
                <%= producto.nombre %>
            </div>
            <div class="col">
                <%= producto.precio %>
            </div>
            <div class="col">
                <img src="<%= producto.thumbnail %>" alt="<%= producto.nombre %>" width="50">
            </div>
        </div>
        <% }) %>
</div>
